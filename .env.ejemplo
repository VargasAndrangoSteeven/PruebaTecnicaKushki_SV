# 
# CONFIGURACIÓN FLASK
# 
FLASK_ENV=desarrollo
FLASK_DEBUG=True
PUERTO_BACKEND=5077

# Clave secreta para sesiones Flask (genera una segura)
# Generador: python -c "import secrets; print(secrets.token_hex(32))"
CLAVE_SECRETA=cambia-esta-clave-por-una-segura-en-produccion

# Clave secreta para JWT (genera una diferente)
CLAVE_SECRETA_JWT=cambia-esta-clave-jwt-por-una-segura-en-produccion

# 
# BASE DE DATOS
# 
# SQLite para desarrollo (ruta absoluta)
URL_BASE_DATOS=sqlite:////app/datos/app.db

# Para producción usar PostgreSQL:
# URL_BASE_DATOS=postgresql://usuario:contrasena@host:5432/nombre_bd

# 
# GOOGLE CLOUD VISION API
# 
# Ruta al archivo de credenciales JSON (relativa al backend)
CREDENCIALES_GOOGLE=./credenciales/google-vision.json

# 
# IMAGGA API
# 
IMAGGA_API_KEY=acc_17c557dadc898af
IMAGGA_API_SECRET=2be723d45c97944643a1afea53fd3d20
IMAGGA_ENDPOINT=https://api.imagga.com/v2/tags

# 
# ENCRIPTACIÓN GPG
# 
# Frase de seguridad para encriptar la base de datos
FRASE_SEGURIDAD_GPG=cambia-esta-frase-por-una-segura

# 
# CONFIGURACIÓN CORS
# 
# URL del frontend (para desarrollo local)
URL_FRONTEND=https://localhost:3000

# Para producción:
# URL_FRONTEND=https://tu-dominio-produccion.com

# 
# CONFIGURACIÓN JWT
# 
# Tiempo de expiración del token en horas
TIEMPO_EXPIRACION_JWT=24

# 
# CONFIGURACIÓN DE ARCHIVOS
# 
# Tamaño máximo de archivo en bytes (5MB)
TAMANO_MAXIMO_ARCHIVO=5242880

# Tipos de archivo permitidos
TIPOS_ARCHIVO_PERMITIDOS=image/jpeg,image/jpg,image/png,image/gif,image/webp

# 
# RATE LIMITING
# 
# Número máximo de peticiones por minuto por usuario
LIMITE_PETICIONES_POR_MINUTO=10

# 
# CONFIGURACIÓN SSL/TLS
# 
# Solo para desarrollo (producción debe usar certificados válidos)
USAR_SSL_DESARROLLO=True

# 
# LOGGING
# 
NIVEL_LOG=DEBUG

# Para producción:
# NIVEL_LOG=WARNING

# 
# USUARIO ADMINISTRADOR INICIAL
# 
# Usuario y contraseña del admin creado al inicializar
